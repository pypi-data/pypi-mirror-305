{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "python_identifier": {
      "type": "string",
      "pattern": "^[^\\d\\W]\\w*\\Z"
    },
    "feature_spec": {
      "$ref": "#/$defs/python_identifier"
    },
    "meta_feature_spec": {
      "oneOf": [
        {
          "$ref": "#/$defs/feature_spec"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "long_name": {
                "type": "string"
              },
              "data_type": {
                "type": "string",
                "enum": [
                  "infer",
                  "string",
                  "int",
                  "float",
                  "boolean",
                  "categorical",
                  "datetime",
                  "duration"
                ]
              }
            },
            "additionalProperties": false
          },
          "propertyNames": {
            "$ref": "#/$defs/python_identifier"
          },
          "minProperties": 1,
          "maxProperties": 1
        }
      ]
    },
    "datapoint_spec": {
      "type": "object",
      "uniqueItems": true,
      "propertyNames": {
        "$ref": "#/$defs/python_identifier"
      },
      "additionalProperties": {
        "type": "array",
        "uniqueItems": true
      }
    },
    "datapoint_spec_min_one": {
      "allOf": [
        {
          "$ref": "#/$defs/datapoint_spec"
        },
        {
          "additionalProperties": {
            "minItems": 1
          }
        }
      ]
    },
    "basic_feature_specs": {
      "additionalProperties": {
        "items": {
          "$ref": "#/$defs/feature_spec"
        }
      }
    },
    "meta_feature_specs": {
      "additionalProperties": {
        "items": {
          "$ref": "#/$defs/meta_feature_spec"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "extensions": {
      "type": "array",
      "items": {
        "enum": [
          "metadata",
          "annotations",
          "segmentation"
        ]
      },
      "uniqueItems": true
    },
    "event_specs": {
      "$ref": "#/$defs/datapoint_spec"
    },
    "measurement_specs": {
      "$ref": "#/$defs/datapoint_spec_min_one",
      "additionalProperties": {
        "minItems": 1
      }
    },
    "annotation_specs": {
      "type": "object",
      "properties": {
        "input": {
          "$ref": "#/$defs/datapoint_spec_min_one"
        },
        "output": {
          "$ref": "#/$defs/datapoint_spec_min_one"
        }
      },
      "required": [
        "input",
        "output"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "event_specs",
    "measurement_specs"
  ],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "extensions": {
            "contains": {
              "const": "metadata"
            }
          }
        },
        "required": [
          "extensions"
        ]
      },
      "then": {
        "properties": {
          "event_specs": {
            "$ref": "#/$defs/meta_feature_specs"
          },
          "measurement_specs": {
            "$ref": "#/$defs/meta_feature_specs"
          },
          "annotation_specs": {
            "properties": {
              "input": {
                "$ref": "#/$defs/meta_feature_specs"
              },
              "output": {
                "$ref": "#/$defs/meta_feature_specs"
              }
            }
          }
        }
      },
      "else": {
        "properties": {
          "event_specs": {
            "$ref": "#/$defs/basic_feature_specs"
          },
          "measurement_specs": {
            "$ref": "#/$defs/basic_feature_specs"
          },
          "annotation_specs": {
            "properties": {
              "input": {
                "$ref": "#/$defs/basic_feature_specs"
              },
              "output": {
                "$ref": "#/$defs/basic_feature_specs"
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "extensions": {
            "contains": {
              "const": "annotations"
            }
          }
        },
        "required": [
          "extensions"
        ]
      },
      "then": {
        "required": [
          "annotation_specs"
        ]
      },
      "else": {
        "not": {
          "required": [
            "annotation_specs"
          ]
        }
      }
    }
  ]
}
