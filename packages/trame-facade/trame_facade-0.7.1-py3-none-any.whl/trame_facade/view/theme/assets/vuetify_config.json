{
    "defaults": {
        "global": {
            "hideDetails": "auto",
            "hideSpinButtons": true,
            "persistentPlaceholder": true
        },
        "VAlert": {
            "color": "secondary"
        },
        "VAppBar": {
            "color": "primary",
            "VBtn": {
                "color": false
            }
        },
        "VBadge": {
            "color": "secondary"
        },
        "VBtn": {
            "color": "primary"
        },
        "VBtnToggle": {
            "color": "primary",
            "VBtn": {
                "class": "border-primary border-sm"
            }
        },
        "VCard": {
            "VCardSubtitle": {
                "style": {
                    "white-space": "normal"
                }
            },
            "VCardTitle": {
                "style": {
                    "line-height": 1.2,
                    "white-space": "normal"
                }
            }
        },
        "VCardSubtitle": {
            "opacity": 0.8
        },
        "VCheckbox": {
            "color": "primary"
        },
        "VChip": {
            "color": "primary"
        },
        "VDivider": {
            "color": "primary"
        },
        "VExpansionPanels": {
            "color": "primary"
        },
        "VFileInput": {
            "color": "primary",
            "prependIcon": false
        },
        "VLabel": {
            "style": {
                "opacity": 1.0
            }
        },
        "VList": {
            "VListItemAction": {
                "VBtn": {
                    "class": "ml-2"
                },
                "VProgressCircular": {
                    "class": "ml-2"
                }
            }
        },
        "VListItem": {
            "VBtn": {
                "color": "secondary"
            }
        },
        "VListItemSubtitle": {
            "opacity": 0.8
        },
        "VProgressCircular": {
            "color": "secondary"
        },
        "VProgressLinear": {
            "color": "secondary"
        },
        "VRadioGroup": {
            "color": "primary"
        },
        "VSelect": {
            "color": "primary"
        },
        "VSlider": {
            "color": "primary"
        },
        "VSnackbar": {
            "color": "primary",
            "VBtn": {
                "color": false
            }
        },
        "VSwitch": {
            "color": "primary"
        },
        "VTextarea": {
            "color": "primary"
        },
        "VTextField": {
            "color": "primary"
        },
        "VWindowItem": {
            "reverseTransition": "fade-transition",
            "transition": "fade-transition"
        }
    },
    "theme": {
        "defaultTheme": "ModernTheme",
        "themes": {
            "ModernTheme": {
                "colors": {
                    "background": "#f0f0f0",
                    "primary": "#007833",
                    "secondary": "#f48e5c"
                },
                "defaults": {
                    "VCard": {
                        "class": "pa-4",
                        "VListItem": {
                            "class": "border-primary border-sm",
                            "style": {
                                "background-color": "rgba(var(--v-theme-primary), 0.1)"
                            }
                        }
                    },
                    "VCol": {
                        "VCard": {
                            "class": "border-primary border-sm pa-4",
                            "style": {
                                "background-color": "rgba(var(--v-theme-primary), 0.1)"
                            }
                        }
                    }
                },
                "title": "Modern",
                "value": "ModernTheme"
            },
            "TechnicalTheme": {
                "colors": {
                    "background": "#f0f0f0",
                    "primary": "#359cdb",
                    "secondary": "#cdcdcd",
                    "accent": "#f0f0f0",
                    "black": "#000000"
                },
                "defaults": {
                    "VAlert": {
                        "color": "primary"
                    },
                    "VAppBar": {
                        "color": "background",
                        "elevation": 1
                    },
                    "VBadge": {
                        "color": "primary"
                    },
                    "VBtn": {
                        "class": "bg-accent",
                        "style": {
                            "background": "linear-gradient(rgba(var(--v-theme-accent), 0.5), rgba(var(--v-theme-primary), 0.1))",
                            "border": "2px solid rgb(var(--v-theme-primary))"
                        }
                    },
                    "VBtnToggle": {
                        "VBtn": {
                            "style": false
                        }
                    },
                    "VCard": {
                        "class": "bg-secondary border-black border-md pa-4",
                        "elevation": 1,
                        "rounded": false,
                        "VList": {
                            "class": "bg-secondary",
                            "VListItem": {
                                "class": "bg-white border-black border-sm"
                            }
                        }
                    },
                    "VChip": {
                        "color": false
                    },
                    "VCol": {
                        "VCard": {
                            "class": "bg-accent pa-4",
                            "style": {
                                "background": "linear-gradient(rgb(var(--v-theme-accent)), rgba(var(--v-theme-primary), 0.15))",
                                "border": "2px solid rgb(var(--v-theme-primary))"
                            }
                        }
                    },
                    "VExpansionPanels": {
                        "color": "white"
                    },
                    "VProgressCircular": {
                        "color": "primary"
                    },
                    "VProgressLinear": {
                        "color": "primary"
                    },
                    "VSnackbar": {
                        "color": "secondary"
                    },
                    "VTabs": {
                        "VBtn": {
                            "style": false
                        }
                    }
                },
                "title": "Technical",
                "value": "TechnicalTheme"
            }
        },
        "variations": {
            "colors": ["primary", "secondary", "accent"],
            "darken": 5,
            "lighten": 5
        }
    }
}
