{% extends "html.j2" %}

{% block header %}

<div class="title">
    <h1>{{title}}</h1>
    <div class="author">{{author}} ï¸± {{date.strftime(date_format or '%Y-%m-%d')}}</div>
</div>

<p>{{description}}</p>

<img src="{{image}}" alt="{{title}}">

{% endblock %}

{% block footer %}

<div class="related">
    {% for r in related %}
    <a class="block" href="{{r.url}}">
        <div class="preview">
            <img src="{{r.info.image}}" alt="{{r.info.title}}">
            <h3>{{r.info.title}}</h3>
            <p>{{r.info.description}}</p>
        </div>
    </a>
    {% endfor %}
</div>

<script defer src="https://i.emote.com/js/emote.js"></script>
<div id="emote_com"></div>

{% endblock %}