# =============================================================================
# EDITOR CONFIGURATION: https://editorconfig.org
# =============================================================================

root = true

# -- DEFAULT: Unix-style newlines with a newline ending every file.
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2

[*.toml]
indent_size = 2

[**/makefile]
indent_style = tab

[*.{cmd,bat,ps1}]
end_of_line = crlf
